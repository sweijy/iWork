<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@color/color_457DE3">

    <LinearLayout
        android:id="@id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_toLeftOf="@id/relative_layout"
        android:background="@drawable/shape_stroke_deepblue"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_search_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/Work_Search"
            android:textColor="@color/color_6DA1FF"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/relative_layout"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_stroke_frame_blue"
        android:gravity="center">

        <ImageView
            android:id="@id/image_view"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/icon_conversation_add" />
    </RelativeLayout>
</RelativeLayout>