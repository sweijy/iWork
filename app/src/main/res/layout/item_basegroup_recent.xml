<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@drawable/selector_list_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_9"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9">

        <View
            android:id="@id/select"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/selector_checkstate" />

        <connect.widget.DepartmentAvatar
            android:id="@+id/avatar_lin"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/avatar_rimg"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12" />
    </LinearLayout>

    <TextView
        android:id="@id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:text="sdsd"
        android:textColor="@color/color_393939"
        android:textSize="@dimen/sp_12" />
</LinearLayout>