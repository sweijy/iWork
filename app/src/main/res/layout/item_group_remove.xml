<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_eceef3"
    android:orientation="vertical">

    <TextView
        android:id="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/color_FAFBFC"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_60"
        android:textColor="@color/color_9A9A9A"
        android:textSize="@dimen/sp_12" />

    <RelativeLayout
        android:id="@id/relative_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">

        <ImageView
            android:id="@id/checkstate"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/selector_checkstate" />

        <ImageView
            android:id="@id/roundimg"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/checkstate"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/roundimg"
            android:textColor="@color/color_393939"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@id/manager_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/roundimg"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/shape_8px_a8a8a8"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_7"
            android:paddingRight="@dimen/dp_7"
            android:paddingTop="@dimen/dp_3"
            android:visibility="gone"
            android:text="@string/Chat_Group_Manager"
            android:textColor="@color/color_A8A8A8"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>
</LinearLayout>