<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/relative_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@color/color_white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@id/framelayout"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_8">

        <ImageView
            android:id="@id/roundimg_head"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <connect.widget.badge.BadgeView
            android:id="@id/badgetv"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/framelayout"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_393939"
            android:textSize="@dimen/sp_14" />

        <connect.activity.home.view.ShowTextView
            android:id="@id/directTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_8E8E8E"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <connect.widget.RightTrangleView
        android:id="@id/right_trangle"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b3b5bc"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:id="@id/image_notify"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/icon_conversation_notify_close" />
    </LinearLayout>
</RelativeLayout>