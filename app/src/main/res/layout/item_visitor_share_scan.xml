<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/color_1C6ED5"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/sp_20"
            android:text="BITMAIN 访客邀请"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/shape_8px_ffffff">
        <ImageView
            android:id="@+id/scan_image"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_240"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_20"/>
        <TextView
            android:id="@+id/visitor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:scrollHorizontally="true"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_161A21"/>
        <TextView
            android:id="@+id/text_123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:scrollHorizontally="false"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_868686"
            android:text="二维码3小时内有效，并且只能使用一次"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_linear"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            style="@style/BaseViewLine.d1d5da"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:text="北京比特大陆科技有限公司"
            android:textColor="@color/color_828282"
            android:textSize="@dimen/sp_12" />
        <View
            style="@style/BaseViewLine.d1d5da"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>