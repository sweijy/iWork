<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/color_F5F6F9"
        android:paddingLeft="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_8E8E8E"
        android:text="@string/app_name"/>

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_E7E7E7" />

    <TextView
        android:id="@+id/more_content_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/selector_list_item_bg"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_6B91EA"
        android:gravity="center"
        android:text="@string/Link_See_more_contacts"/>

    <LinearLayout
        android:id="@+id/content_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/selector_list_item_bg">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_toRightOf="@+id/avatar_rela"
            android:layout_toLeftOf="@+id/status_btn"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nickname_tv"
                    style="@style/BaseTextStyle.14"
                    android:lines="1"
                    android:maxWidth="@dimen/dp_150"
                    android:ellipsize="end"
                    android:textColor="@color/color_393939" />
                <TextView
                    android:id="@+id/count_tv"
                    style="@style/BaseTextStyle.14"
                    android:lines="1"
                    android:textColor="@color/color_393939" />
            </LinearLayout>

            <TextView
                android:id="@+id/hint_tv"
                style="@style/BaseTextStyle"
                android:lines="1"
                android:textColor="@color/color_8E8E8E"
                android:ellipsize="start"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>