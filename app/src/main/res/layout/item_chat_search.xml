<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top_line"
        style="@style/BaseViewLine.eeeeee"
        android:layout_height="@dimen/dp_12"
        android:background="@color/color_FAFBFC"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:background="@color/color_FFFFFF"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_cecece"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_E7E7E7" />

    <LinearLayout
        android:id="@+id/content_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/selector_list_item_bg">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toRightOf="@+id/avatar_rela"
            android:layout_toLeftOf="@+id/status_btn"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/nickname_tv"
                style="@style/BaseTextStyle.14"
                android:lines="1"
                android:ellipsize="middle"
                android:textColor="@color/color_393939"/>
            <TextView
                android:id="@+id/hint_tv"
                style="@style/BaseTextStyle"
                android:lines="1"
                android:textColor="@color/color_858998"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>