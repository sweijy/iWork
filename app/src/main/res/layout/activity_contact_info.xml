<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FAFBFC">

    <connect.widget.TopToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">
        <ImageView
            android:id="@+id/avatar_imageview"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_58" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/avatar_imageview"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_393939"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:maxLength="15"
                android:ellipsize="end" />
            <ImageView
                android:id="@+id/gender_image"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:background="@color/color_FFFFFF"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_B2B2B2"
            android:text="@string/Link_Account"/>
        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_222222"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_E7E7E7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_45"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_B2B2B2"
            android:text="@string/Link_Subordinate_departments"/>
        <TextView
            android:id="@+id/department_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_222222"
            android:text=""/>
    </LinearLayout>

    <Button
        android:id="@+id/chat_btn"
        style="@style/ButtonLongStyle"
        android:layout_marginTop="@dimen/dp_110"
        android:text="@string/Chat_Chats"/>

    <Button
        android:id="@+id/contact_btn"
        style="@style/ButtonLongStyle_White"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/color_F56565"
        android:text="@string/Link_Delete_contact"
        android:visibility="gone"/>

</LinearLayout>