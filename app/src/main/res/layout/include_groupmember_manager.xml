<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF">

    <ImageView
        android:id="@id/roundimg"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_margin="@dimen/dp_12"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@id/roundimg"
        android:textColor="@color/color_393939"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toRightOf="@id/roundimg"
        android:text="default"
        android:textColor="@color/color_A6A6A6"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@id/groupat_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/roundimg"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_8px_a8a8a8"
        android:padding="@dimen/dp_7"
        android:text="@string/Chat_Group_Manager"
        android:textColor="@color/color_A8A8A8"
        android:textSize="@dimen/sp_10"
        android:visibility="gone" />
</RelativeLayout>