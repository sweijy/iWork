<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@id/layout_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_9"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9">

        <connect.widget.DepartmentAvatar
            android:id="@+id/avatar_lin"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/avatar_rimg"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toRightOf="@id/layout_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@id/text_view"
            style="@style/BaseTextStyle.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/layout_delete"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@mipmap/input_del" />
    </RelativeLayout>
</RelativeLayout>